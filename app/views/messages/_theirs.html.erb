<div class="message mb-2">
  <div class="content-container">
     <% if message.user.profile.header_image.present? %>
        <span class="author">
          <%= image_tag(message.user.profile.header_image, size:"30x30", id: "avt_img") %>
        </span>
      <% else %>
        <span class="author">
          <%= image_tag("avt.jpg", size:"30x30", id: "avt_img") %>
        </span>
      <% end %>
    <span class="content">
      <%= message.content %>
    </span>
    <p>
          <% if message.header_image.present? %>
            <br>
            <%= image_tag(message.header_image, width: '200px') %>
          <% end %>
        </p>
  </div>
</div>