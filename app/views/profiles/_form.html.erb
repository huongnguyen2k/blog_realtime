<%= form_with(model: profile) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :Image %>
    <%= form.file_field :header_image, class: 'image-control' %>
    <br>
    <br>
    <% if profile.header_image.present? %>
      <%= image_tag(profile.header_image, size: "400px") %>
    <% end %>
  </div>

  <div class="field form-group">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, class:"form-control",placeholder:"Full name" %>
  </div>
<br>
  <div class="field form-group">
    <%= form.label :birthday %>
    <%= form.date_select :birthday, {order: [:day, :month, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year , end_year: Date.today.year - 100}, {required: true} %>
  </div>
<br>
  <div class="field form-group">
    <%= form.label :phone %>
    <%= form.number_field :phone, class:"form-control",placeholder:"Phone" %>
  </div>
<br>
  <div class="field form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class:"form-control",placeholder:"Address" %>
  </div>
<br>
  <div class="field form-group">
    <%= form.label :intersts %>
    <%= form.text_field :intersts, class:"form-control",placeholder:"Interests" %>
  </div>
<br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
