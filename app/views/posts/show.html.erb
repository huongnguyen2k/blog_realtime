<p>
  <% if @post.header_image.present? %>
  <%= image_tag(@post.header_image, width: '100%') %>
  <% end %>
</p>

<strong class="post_title">

  <%= @post.title %> <%= link_to 'Edit', edit_post_path(@post)%>  
